local chamber_height=4
local chamber_width=5
local chamber_length=10

function digChamber()
  write("Digging first pass\n")
  for c=1,chamber_length,1 do
    turtle.dig()
    turtle.digUp()
	turtle.digDown()
	turtle.turnLeft()
	turtle.dig()
	turtle.turnRight()
	turtle.turnRight()
	turtle.dig()
	turtle.turnLeft()
	turtle.forward()
  end
  
  write("Connecting...\n")
  turtle.back()
  turtle.down()
  turtle.turnLeft()
  turtle.dig()
  turtle.forward()
  turtle.dig()
  turtle.forward()
  
  turtle.turnLeft()
  
  write("Digging lower left flank\n")
  for c=1,chamber_length,1 do
    turtle.dig()
    turtle.digUp()
	turtle.turnLeft()
	turtle.dig()
	turtle.turnRight()
	turtle.forward()
  end

  write("Connecting...\n")  
  turtle.turnLeft()
  
  turtle.forward()
  turtle.forward()
  turtle.dig()
  turtle.forward()
  turtle.dig()
  turtle.forward()
  turtle.turnLeft()
 
  write("Digging lower right flank\n") 
  for c=1,chamber_length,1 do
    turtle.dig()
    turtle.digUp()
	turtle.turnLeft()
	turtle.dig()
	turtle.turnRight()
	turtle.forward()
  end

  write("Connecting...\n")
  turtle.up()
  turtle.digUp()
  turtle.up()
  turtle.digUp()
  turtle.up()
  turtle.turnLeft()
  turtle.turnLeft()
  
  write("Digging upper right flank\n") 
  for c=1,chamber_length,1 do
    turtle.dig()
    turtle.digDown()
	turtle.turnRight()
	turtle.dig()
	turtle.turnLeft()
	turtle.forward()
  end
  
  write("Connecting...\n")  
  turtle.turnRight()
  turtle.forward()
  turtle.forward()
  turtle.dig()
  turtle.forward()
  turtle.dig()
  turtle.forward()
  turtle.turnRight()
  
  write("Digging upper left flank\n") 
  for c=1,chamber_length,1 do
    turtle.dig()
    turtle.digDown()
	turtle.turnRight()
	turtle.dig()
	turtle.turnLeft()
	turtle.forward()
  end
end

function main()
  write("How deep?")
  local levels = tonumber( read() )

  write("How many chambers?")
  local chambers = tonumber( read() )

  write("Chamber start level?")
  local chamber_start_level = tonumber( read() )

  write("Chamber spacing?")
  local chamber_spacing = tonumber( read() )

  for i=1,levels,1 do
    for j=1,5,1 do
      turtle.dig()
	  turtle.forward()
    end
  
    for k=1,4,1 do
      turtle.back()
    end
  
    turtle.digDown()
    turtle.down()
  
    if( i == chamber_start_level ) then
      digChamber()
    end
  end
end

main()

