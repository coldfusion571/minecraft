
write("How deep?")
local Num = tonumber( read() )

for i=1,Num do
  for j=1, 5 do
    if( turtle.dig() ) then
	else
	  turtle.forward()
	end
	write("turtle forward")
  end
  
  for j=1, 4 do
    turtle.back()
  end
  write("turtle backup")
  
  if( turtle.digDown() ) then
    write( "Couldn't dig down." )
    turtle.down()
  else
    turtle.down()
  end
  write("turtle down")
end