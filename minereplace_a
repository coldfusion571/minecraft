local chamber_height=4
local chamber_width=5
local chamber_length=10

function myForward()
  if not turtle.forward() then
    turtle.dig()
	turtle.forward()
  end
end

function myUp()
  if not turtle.up() then
    turtle.digUp()
	turtle.up()
  end
end

function digLeft()
  turtle.turnLeft()
  turtle.dig()
  turtle.turnRight()
end

function digRight()
  turtle.turnRight()
  turtle.dig()
  turtle.turnLeft()
end

function digChamber()
  write("Digging first pass\n")
  for c=1,chamber_length,1 do
    turtle.digUp()
	turtle.digDown()
    digLeft()
	digRight()
	myForward()
  end
  
  write("Connecting...\n")
  turtle.down()
  turtle.turnLeft()
  myForward()
  myForward()
  
  turtle.turnLeft()
  
  write("Digging lower left flank\n")
  for c=1,chamber_length,1 do
    turtle.digUp()
    digLeft()
	myForward()
  end

  write("Connecting...\n")  
  turtle.turnLeft()
  
  myForward()
  myForward()
  myForward()
  myForward()
  turtle.turnLeft()
 
  write("Digging lower right flank\n") 
  for c=1,chamber_length,1 do
    turtle.digUp()
    digLeft()
	myForward()
  end

  write("Connecting...\n")
  myUp()
  myUp()
  myUp()
  turtle.turnLeft()
  turtle.turnLeft()
  
  write("Digging upper right flank\n") 
  for c=1,chamber_length,1 do
    turtle.dig()
    turtle.digDown()
    digRight()
	turtle.forward()
  end
  
  write("Connecting...\n")  
  turtle.turnRight()
  turtle.forward()
  turtle.forward()
  turtle.dig()
  turtle.forward()
  turtle.dig()
  turtle.forward()
  turtle.turnRight()
  
  write("Digging upper left flank\n") 
  for c=1,chamber_length,1 do
    turtle.dig()
    turtle.digDown()
    digRight()
	myForward()
  end
end

function main()
  write("How deep?")
  local levels = tonumber( read() )

  write("How many chambers?")
  local chambers = tonumber( read() )

  write("Chamber start level?")
  local chamber_start_level = tonumber( read() )

  write("Chamber spacing?")
  local chamber_spacing = tonumber( read() )

  for i=1,levels,1 do
    for j=1,5,1 do
      myForward()
    end
  
    for k=1,4,1 do
      turtle.back()
    end
  
    turtle.digDown()
    turtle.down()
  
    if( i == chamber_start_level ) then
      digChamber()
    end
  end
end

main()

